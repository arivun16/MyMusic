<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#020828</item>
        <item name="colorPrimaryDark">#0f1934</item>
        <item name="colorAccent">#ff0000</item>
    </style>



    <style name="TranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="Fragment.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <!--设置全屏dialog-->

        <!--设置透明状态栏-->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="bottom_fragment">
        <item name="android:windowEnterAnimation">@anim/bottom_fragment_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_fragment_out</item>
    </style>

</resources>
